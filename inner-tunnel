server inner-tunnel {
	namespace = radius
listen {
	type = Access-Request
	transport = udp
	udp {
		ipaddr = 127.0.0.1
		port = 18120
	}
}
recv Access-Request {
	filter_username
	filter_inner_identity
	chap
	mschap
	eap {
		ok = return
	}
	files
	-sql
#	smbpasswd
	-ldap
#	daily

	expiration
	pap
}
authenticate pap {
	pap
}
authenticate chap {
	chap
}
authenticate mschap {
	mschap
}
authenticate eap {
	     eap
}
send Access-Accept {
#       cui-inner
#	reply_log
	-sql
#	sql_log
#	ldap
#	use_tunneled_reply
}
#  post-auth section.
#  'edir = yes' in the ldap module configuration
send Access-Reject {
	-sql
	attr_filter.access_reject
	&outer.session-state.Module-Failure-Message := &request.Module-Failure-Message
}
} # inner-tunnel server block